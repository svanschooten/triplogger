# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /login                      controllers.Application.logIn()
POST    /addtrip                    controllers.Application.addTrip()
POST    /deleteTrip/:id             controllers.Application.deleteTrip(id: Integer)
GET     /login/:user&:pw            controllers.Application.autoLogIn(user: String, pw: String)
GET     /profile                    controllers.Application.profile()
GET     /stats                      controllers.Application.stats()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
