# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

GET     /login                      controllers.Application.login()
GET     /signup                     controllers.Application.signup()
GET     /logout                     controllers.Application.logout()
GET     /trip                     	controllers.Application.advancedtrip()
GET     /buddy                     	controllers.Application.buddylist()
GET     /validate/:token            controllers.Application.userValidate(token: String)
POST    /login                      controllers.Application.authenticate()
POST    /methods/mail               controllers.Mailer.mailTo()
POST    /adduser                    controllers.Application.adduser()
POST    /addtrip                    controllers.Application.addTrip()
POST    /adddrug                    controllers.Application.addDrug()
POST    /addmeasure                 controllers.Application.addMeasure()
GET     /local/addtrip              controllers.Application.addLocalTrip()
POST    /deleteTrip/:id             controllers.Application.deleteTrip(id: Integer)
GET     /login/:user&:pw            controllers.Application.autoLogIn(user: String, pw: String)
GET     /profile                    controllers.Application.profile()
GET     /stats                      controllers.Application.stats()

# Test pages:
GET     /testBuddies                controllers.Test.testBuddy()
GET		/testAddTrip				controllers.Test.testAddTrip()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
